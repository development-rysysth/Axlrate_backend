{ 
  "name": "axlrate-backend",
  "version": "0.0.1",
  "description": "Microservices backend with authentication",
  "main": "index.js",
  "scripts": {
    "build": "pnpm run build:shared && pnpm run build:gateway && pnpm run build:auth && pnpm run build:hotel && pnpm run build:ingest && pnpm run build:orchestrator",
    "build:shared": "pnpm --filter @axlrate/shared build",
    "build:gateway": "pnpm --filter @axlrate/api-gateway build",
    "build:auth": "pnpm --filter @axlrate/auth-service build",
    "build:hotel": "pnpm --filter @axlrate/hotel-service build",
    "build:ingest": "pnpm --filter @axlrate/hotel-ingestion-service build",
    "build:orchestrator": "pnpm --filter @axlrate/scraper-orchestrator build",
    "start:gateway": "pnpm --filter @axlrate/api-gateway start",
    "start:auth": "pnpm --filter @axlrate/auth-service start",
    "start:hotel": "pnpm --filter @axlrate/hotel-service start",
    "start:ingest": "pnpm --filter @axlrate/hotel-ingestion-service start",
    "start:orchestrator": "pnpm --filter @axlrate/scraper-orchestrator start",
    "dev:gateway": "pnpm --filter @axlrate/api-gateway dev",
    "dev:auth": "pnpm --filter @axlrate/auth-service dev",
    "dev:hotel": "pnpm --filter @axlrate/hotel-service dev",
    "dev:ingest": "pnpm --filter @axlrate/hotel-ingestion-service dev",
    "dev:orchestrator": "pnpm --filter @axlrate/scraper-orchestrator dev",
    "dev": "concurrently \"pnpm run dev:gateway\" \"pnpm run dev:auth\" \"pnpm run dev:hotel\"",
    "dev:all": "concurrently \"pnpm run dev:gateway\" \"pnpm run dev:auth\" \"pnpm run dev:hotel\" \"pnpm run dev:ingest\" \"pnpm run dev:orchestrator\"",
    "start": "concurrently \"pnpm run start:gateway\" \"pnpm run start:auth\" \"pnpm run start:hotel\"",
    "start:all": "concurrently \"pnpm run start:gateway\" \"pnpm run start:auth\" \"pnpm run start:hotel\" \"pnpm run start:ingest\" \"pnpm run start:orchestrator\"",
    "ingest:city": "pnpm --filter @axlrate/hotel-ingestion-service ingest:city"
  },
  "keywords": [
    "microservices",
    "nodejs",
    "express",
    "authentication"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "dotenv": "^16.3.1"
  }
}
